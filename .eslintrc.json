{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": ["error", "as-needed", {
            "requireForBlockBody": true
        }],
        "camelcase": ["error", {
            "ignoreDestructuring": true,
            "ignoreImports": true,
            "properties": "never"
        }],
        "comma-dangle": ["error", "only-multiline"],
        "guard-for-in": ["off"],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "max-len": ["error", {
            "code": 120,
            "ignoreComments": true
        }],
        "new-cap": ["error", {
            "capIsNewExceptions": ["Router"]
        }],
        "no-invalid-this": ["off"],
        "object-curly-spacing": ["error", "always", {
            "objectsInObjects": false
        }],
        "operator-linebreak": ["error", "after", {
            "overrides": {
                "?": "before",
                ":": "before"
            }
        }],
        "quotes": ["error", "double"],
        "space-before-function-paren": ["error", {
            "anonymous": "ignore",
            "asyncArrow": "always",
            "named": "ignore"
        }]
    }
}
